% -------- Slide 10 --------
\begin{frame}[t]{Margins: DNBR vs CPR (the dashboard numbers)}
\begin{columns}[T,onlytextwidth]
\column{0.55\textwidth}
\begin{block}{PWR: DNBR}
\begin{itemize}
  \item DNBR = (predicted CHF at local conditions) / (actual local heat flux).
  \item DNBR > 1 means margin; smaller DNBR means closer to DNB.
  \item Design/tech specs enforce a minimum DNBR with uncertainty included.
\end{itemize}
\end{block}

\begin{block}{BWR: CPR}
\begin{itemize}
  \item CPR = (critical power) / (operating bundle power).
  \item CPR > 1 means margin; lower CPR means closer to dryout.
  \item Reported as bundle/assembly minimum, with statistical margin (MCPR).
\end{itemize}
\end{block}

\column{0.45\textwidth}
\statusbox{status yellow}{If DNBR or CPR trends down: stop debating and start checking inputs}
\vspace{0.8ex}
\begin{block}{Mini mnemonic}
\begin{itemize}
  \item DNB: ``rewet failure''.
  \item Dryout: ``film gone''.
\end{itemize}
\end{block}
\end{columns}
\end{frame}

